<%= provide(:title, 'Signup')%>
<h1 class='py-3'>Welcome to the Signup page</h1>

<%= bootstrap_form_with(url: login_path, scope: :session, local: true) do |f| %> 
  <%= f.text_field :email %>
  <span><%= f.password_field :password %> </span>
  <%= f.submit "Log in", class: 'btn-lg btn-primary mb-5 mt-3'%>
  <br>
  <%= f.check_box :remember_me, class: 'checkbox' do %>
  <br>
   <span> Remember me on this computer </span>
  <hr>
  <%= link_to "(Forgot password)", new_password_reset_path %>
  <%end%>
  <br>
  <p class='ml-4'> New User? <%= link_to ' Signup ', signup_path, class: 'font-weight-bold text-success' %> </p>
 <%end%>

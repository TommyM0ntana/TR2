<%= provide(:title, 'Signup')%>
<h1 class='py-3'>Welcome to the Signup page</h1>

<%= bootstrap_form_with(url: login_path, scope: :session, local: true) do |f| %> 
  <%= f.text_field :email %>
  <%= f.password_field :password %>
  <%= f.submit "Log in", class: 'btn btn-primary  mb-3 mt-3'%>
  <p> New User? <%= link_to ' Signup ', signup_path, class: 'font-weight-bold text-success' %> </p>
 <%end%>
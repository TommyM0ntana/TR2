<%= provide(:title, 'Reset Password')%>
<h1 class='py-3 text-center h1'>Reset Password</h1>

<%= bootstrap_form_with(model: @user, url: password_reset_path(params[:id]), local: true) do |f| %>
  <%= render 'shared/error_messages' %>
  <%= hidden_field_tag :email, @user.email %>
  <%= f.password_field :password %>
  <%= f.password_field :password_confirmation, label: "Confirm Password" %>
  <%= f.submit "Update Password", class: 'btn-lg btn-primary mb-5 mt-3 shadow'%>
<%end%>


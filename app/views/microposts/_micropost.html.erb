 <div class="container py-4 my-4 ">
   <li class='shadow bg-light card p-4 micropost-<%= micropost.id %>'>
     <%= link_to gravatar_for(micropost.user), micropost.user %>
    <br>
     <div><%= link_to micropost.user.name %></div>
    <br>
     <%= micropost.content %>
    <br>
     <hr>
     <%= image_tag micropost.display_image if micropost.image.attached? %>

     <blockquote class="blockquote mb-0">
      <p>Posted </p>
      <footer class="blockquote-footer">
      <cite title="text-center Source Title ">
      <%= time_ago_in_words(micropost.created_at) %> ago.
        <% if current_user?(micropost.user) %>
        <%= link_to 'Delete', micropost, method: :delete,
                                                  data: { confirm: 'Are you Sure?' } %>
        <% end %>
      </cite></footer>
    </blockquote>
   </li>
 </div>
<%= provide(:button_text, 'SUBMIT POST' )%>
<div class="container">
  <%= form_with(model: @micropost, local: true) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
    <%= f.text_area :content, class: 'form-c', placeholder: "Compose new micropost..." %>
    <br>  
      <%= f.file_field :image, accept: "image/png,image/gif,image/jpeg", class: 'm-auto border border rounded' %>
    <br>
      <%= f.submit yield(:button_text), class: 'btn btn-lg btn-primary mb-4 mt-3'%>
  <% end %>
</div>

<script type="text/javascript">
  $("#micropost_image").bind("change", function() {
    const size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert("Maximum file size is 5MB. Please choose a smaller file.");
      $("#micropost_image").val("");
    }
  });
</script>